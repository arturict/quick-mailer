# Resend API Configuration
RESEND_API_KEY=re_your_api_key_here

# Email Provider: 'resend' or 'smtp'
EMAIL_PROVIDER=resend

# SMTP Configuration (if EMAIL_PROVIDER=smtp)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=true
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# From Addresses (comma-separated)
FROM_ADDRESSES=noreply@yourdomain.com,support@yourdomain.com,info@yourdomain.com

# Default Sender Name
DEFAULT_SENDER_NAME=Quick Mailer

# Database
DATABASE_PATH=./data/emails.db

# Server
PORT=3000
HOST=0.0.0.0
